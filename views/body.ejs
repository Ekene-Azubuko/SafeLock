<%- include("./partial/header");%>
<form action="/details" method="post" class="details-container" >
    <h1>Save Your Log in details today!</h1>
    <div class="mb-3">
        <input type="text" class="form-control-lg" id="floatingInputApp" placeholder="App" name="app" autocomplete="off" required>
      </div>
    <div class="mb-3">
        <input type="text" class="form-control-lg" id="floatingInput" placeholder="Username" name="username" autocomplete="off" required>
      </div>
      <div class="form">
        <input type="password" class="form-control-lg" id="floatingPassword" placeholder="Password" name="password" autocomplete="off" required>
    </div>
    <button class="btn btn-lg btn-warning mt-3">Save</button>
    <a class="btn btn-lg btn-warning mt-3" type="button" href="/logout">LogOut</a>
  </form>
  <section class="details mt-5">  
    <% detailsArray.forEach(element => { %>
          <form action="/delete" method="post">
            <div class="details-container  my-3">
              <input type="hidden" value="<%=element._id%>" name="note">
              <h3><%= element.app%></h3>
              <p><%= element.username%></p>
              <p><%= element.password%></p>
              <button type="submit" class="btn btn-lg btn-warning">Delete</button>
            </div>
          </form>
    <% }); %>
    
  </section> 